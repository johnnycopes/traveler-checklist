{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["off", "single"],
    "semi": ["error", "always"],
    "no-debugger": ["off"],
    "no-console": ["off", { "allow": ["warn"] }]
  }
}
